{
    "name": "@activfinancial/news-viewer",
    "description": "A simple news viewer using cg-api.",
    "repository": {
        "type": "git",
        "url": "https://github.com/activfinancial/cg-api-examples"
    },
    "version": "0.5.7",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "license": "CC-BY-4.0",
    "author": {
        "name": "ACTIV Financial Systems, Inc.",
        "email": "support@activfinancial.com",
        "url": "http://www.activfinancial.com"
    },
    "files": [
        "/lib/**"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "clean": "rimraf lib/*",
        "types": "dts-generator --prefix \"@activfinancial/news-viewer\" --name \"@activfinancial/news-viewer\" --main \"@activfinancial/news-viewer/src/index\" --project . --out lib/index.d.ts",
        "build": "yarn types && webpack --mode production",
        "develop": "yarn types && webpack --mode development",
        "test": "echo \"No test specified\"",
        "watch": "webpack --mode development --watch -d",
        "serve": "webpack-dev-server --mode development -d",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@activfinancial/cg-api": "^0.11.0",
        "@fortawesome/fontawesome-free": "^5.10.1",
        "detect-browser": "^4.6.0",
        "lit-element": "^2.2.1",
        "text-encoding": "^0.7.0"
    },
    "devDependencies": {
        "@types/detect-browser": "^4.0.0",
        "@types/text-encoding": "^0.0.35",
        "css-loader": "^3.2.0",
        "dts-generator": "^3.0.0",
        "html-loader": "^0.5.5",
        "raw-loader": "^3.1.0",
        "rimraf": "^3.0.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.0.0",
        "terser-webpack-plugin": "^1.4.1",
        "ts-loader": "^6.0.4",
        "typescript": "^3.5.3",
        "url-loader": "^2.1.0",
        "webpack": "^4.39.2",
        "webpack-cli": "^3.3.6",
        "webpack-dev-server": "^3.8.0"
    }
}
