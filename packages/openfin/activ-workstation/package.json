{
    "name": "@activfinancial/activ-workstation",
    "description": "An OpenFin container of the cg-api samples.",
    "repository": {
        "type": "git",
        "url": "https://github.com/activfinancial/cg-api-examples"
    },
    "version": "0.5.6",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "license": "CC-BY-4.0",
    "author": {
        "name": "ACTIV Financial Systems, Inc.",
        "email": "support@activfinancial.com",
        "url": "http://www.activfinancial.com"
    },
    "files": [
        "/app.json",
        "/lib/**"
    ],
    "main": "lib/index.js",
    "scripts": {
        "clean": "rimraf lib",
        "build": "webpack --mode production",
        "develop": "webpack --mode development",
        "test": "jest --passWithNoTests",
        "watch": "webpack --mode development --watch -d",
        "serve": "webpack-dev-server --mode development -d",
        "start": "openfin --launch --config ./app-debug.json",
        "start:live": "openfin --launch --config ./app.json",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@activfinancial/cg-api": "^0.15.1",
        "@activfinancial/montage-viewer": "^0.3.45",
        "@activfinancial/news-viewer": "^0.5.14",
        "@activfinancial/option-chain": "^0.5.2",
        "@activfinancial/record-viewer": "^0.7.2",
        "@fortawesome/fontawesome-free": "^5.12.0",
        "openfin-cli": "2.0.9",
        "react": "^16.12.0",
        "react-bootstrap": "^1.0.0-beta.16",
        "react-contextmenu": "^2.13.0",
        "react-dom": "^16.12.0",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@types/jest": "^24.0.25",
        "@types/openfin": "^45.0.1",
        "@types/react-dom": "^16.9.4",
        "@types/uuid": "^3.4.6",
        "bootstrap": "^4.4.1",
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^3.4.0",
        "favicons-webpack-plugin": "^3.0.0",
        "file-loader": "^5.0.2",
        "html-webpack-plugin": "^4.0.0-beta.11",
        "jest": "^24.9.0",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.13.0",
        "rimraf": "^3.0.0",
        "sass-loader": "^8.0.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.1.2",
        "terser-webpack-plugin": "^2.3.1",
        "ts-jest": "^24.2.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.4",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.10.1"
    },
    "jest": {
        "roots": [
            "src"
        ],
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "ts",
            "tsx"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
        }
    }
}
